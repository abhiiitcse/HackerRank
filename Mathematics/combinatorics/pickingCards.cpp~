#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
using namespace std;
bool compare(int a,int b){
  return a>b;
}

int main(){
  int tt;
  cin>>tt;
  while(tt--){
    int n;
    cin>>n;
    int c[n];
    for(int i=0;i<n;i++){
      cin>>c[i];
    }
    sort(c,c+n);
    long long result = 1;
    int len = n;
    for(int i=n-1;i>=0;i--){
      long long diff = len - c[i];
      if(diff<0){
	diff = 0;
      }
      result *= diff;
      result %= 1000000007;
      len -= 1;
    }
    cout<<result<<endl;
  }
  return 0;
}
